{{if eq .createService "true"}}
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{.service}}
---
# Test service without the proxy
apiVersion: v1
kind: Service
metadata:
  name: {{.service}}
  labels:
    app: {{.service}}
spec:
{{if eq .headless "true"}}
  clusterIP: None
{{end}}
  ports:
  - port: 80
    targetPort: {{.port1}}
    name: http
  - port: 8080
    targetPort: {{.port2}}
    name: http-two
{{if eq .headless "true"}}
  - port: 10090
    targetPort: {{.port3}}
    name: tcp
{{else}}
  - port: 90
    targetPort: {{.port3}}
    name: tcp
  - port: 9090
    targetPort: {{.port4}}
    name: tcp-two
{{end}}
  - port: 70
    targetPort: {{.port5}}
    name: http2-example
  - port: 7070
    targetPort: {{.port6}}
    name: grpc
  selector:
    app: {{.service}}
{{end}}
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:

  name: {{.deployment}}
spec:
  replicas: {{.replicas}}
  template:
    metadata:
      labels:
        app: {{.service}}
        version: {{.version}}
        name: {{.deployment}}
      annotations:
{{if eq .injectProxy "false"}}
        sidecar.istio.io/inject: "false"
{{end}}
        sidecar.istio.io/userVolumeMount: '{"uds":{"mountPath":"/var/run/uds"}}'
    spec:
{{if eq .serviceAccount "true"}}
      serviceAccountName: {{.service}}
{{end}}
      containers:
      - name: app
        image: {{.Hub}}/app:{{.Tag}}
        imagePullPolicy: {{.ImagePullPolicy}}
        volumeMounts:
        - mountPath: /var/run/uds
          name: uds
        args:
          - --port
          - "{{.port1}}"
          - --port
          - "{{.port2}}"
          - --port
          - "{{.port3}}"
          - --port
          - "{{.port4}}"
          - --grpc
          - "{{.port5}}"
          - --grpc
          - "{{.port6}}"
          - --uds
          - "/var/run/uds/serverSock"
{{if eq .healthPort "true"}}
          - --port
          - "3333"
{{end}}
          - --version
          - "{{.version}}"
        ports:
        - containerPort: {{.port1}}
        - containerPort: {{.port2}}
        - containerPort: {{.port3}}
        - containerPort: {{.port4}}
        - containerPort: {{.port5}}
        - containerPort: {{.port6}}
{{if eq .healthPort "true"}}
        - name: tcp-health-port
          containerPort: 3333
        livenessProbe:
          httpGet:
            path: /healthz
            port: 3333
          initialDelaySeconds: 10
          periodSeconds: 10
          failureThreshold: 10
        readinessProbe:
          tcpSocket:
            port: tcp-health-port
          initialDelaySeconds: 10
          periodSeconds: 10
          failureThreshold: 10
{{end}}
      volumes:
      - emptyDir:
          medium: Memory
        name: uds
---
