---
apiVersion: security.istio.io/v1beta1
kind: RequestAuthentication
metadata:
  name: request-authn
spec:
  selector: 
    matchLabels:
      app: {{ .dst }}
  jwtRules:
  - issuer: "test-issuer-1@istio.io"
    jwksUri: "https://jwt-server.istio-system:8443/jwks"
    outputPayloadToHeader: "x-test-payload"
    forwardOriginalToken: true
---