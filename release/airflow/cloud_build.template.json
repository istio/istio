{
  "steps": [
    {
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "args": [ "gsutil", "cp", "-P", "gs://$_GCS_RELEASE_TOOLS_PATH/*", "." ]
    },
    {
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "args": [ "./istio_checkout_code.sh" ]
    },
    {
      "volumes": [
	{
          "name": "buildoutput",
          "path": "/output"
	}
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/gcb/cloud_builder.sh" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/gcb/store_artifacts.sh" ]
    },
    {
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/gcb/rel_push_docker_build_version.sh" ]
    }
  ],
  "options": {
    "machineType": "N1_HIGHCPU_8"
  },
  "timeout": "3600s",
}
