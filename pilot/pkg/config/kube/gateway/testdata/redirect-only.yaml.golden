apiVersion: networking.istio.io/v1
kind: Gateway
metadata:
  annotations:
    internal.istio.io/gateway-semantics: gateway
    internal.istio.io/gateway-service: istio-ingressgateway.istio-system.svc.domain.suffix
    internal.istio.io/parents: Gateway/default/http.istio-system
    internal.istio.io/service-account-name: ""
  name: default~istio-autogenerated-k8s-gateway~http
  namespace: istio-system
spec:
  servers:
  - hosts:
    - '*/*.domain.example'
    port:
      name: default
      number: 80
      protocol: HTTP
---
apiVersion: networking.istio.io/v1
kind: Gateway
metadata:
  annotations:
    internal.istio.io/gateway-semantics: gateway
    internal.istio.io/gateway-service: istio-ingressgateway.istio-system.svc.domain.suffix
    internal.istio.io/parents: Gateway/default/https.istio-system
    internal.istio.io/service-account-name: ""
  name: default~istio-autogenerated-k8s-gateway~https
  namespace: istio-system
spec:
  servers:
  - hosts:
    - '*/*.domain.example'
    port:
      name: default
      number: 443
      protocol: HTTPS
    tls:
      credentialName: kubernetes-gateway://istio-system/my-cert-http
      mode: SIMPLE
---
apiVersion: networking.istio.io/v1
kind: VirtualService
metadata:
  annotations:
    internal.istio.io/parents: HTTPRoute/http-to-https-redirect.istio-system
    internal.istio.io/route-semantics: gateway
  name: istio-system~default~istio-autogenerated-k8s-gateway~http~*
  namespace: istio-system
spec:
  gateways:
  - istio-system/default~istio-autogenerated-k8s-gateway~http
  hosts:
  - '*'
  http:
  - name: istio-system.http-to-https-redirect.0
    redirect:
      derivePort: FROM_PROTOCOL_DEFAULT
      redirectCode: 301
      scheme: https
---
