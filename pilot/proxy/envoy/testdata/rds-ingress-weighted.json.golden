{
  "virtual_hosts": [
   {
    "name": "world.com",
    "domains": [
     "world.com",
     "world.com:80"
    ],
    "routes": [
     {
      "path": "/hello",
      "weighted_clusters": {
       "clusters": [
        {
         "name": "out.world.default.svc.cluster.local|http|version=v0",
         "weight": 75
        },
        {
         "name": "out.world.default.svc.cluster.local|http|version=v1",
         "weight": 25
        }
       ]
      },
      "opaque_config": {
       "destination.service": "world.default.svc.cluster.local",
       "mixer_check": "on",
       "mixer_forward": "on",
       "mixer_report": "on"
      },
      "decorator": {
       "operation": "weighted"
      }
     }
    ]
   }
  ]
 }