apiVersion: "authentication.istio.io/v1alpha1"
kind: "Policy"
metadata:
  name: "enable-jwt"
spec:
  targets:
  - name: "c"
  - name: "d"
    ports:
    - number: 80
  origins:
  - jwt:
      issuer: "test-issuer-1@istio.io"
      jwksUri: "https://raw.githubusercontent.com/istio/istio/release-1.5/tests/common/jwt/jwks.json"
      triggerRules:
      - excludedPaths:
        - exact: /health_check
        - exact: /jwt2
  - jwt:
      issuer: "test-issuer-2@istio.io"
      jwksUri: "https://raw.githubusercontent.com/istio/istio/release-1.5/tests/common/jwt/jwks.json"
      triggerRules:
      - includedPaths:
        - exact: /jwt2
  principalBinding: USE_ORIGIN
