---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: istio-ca-service-account
---
kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: istio-ca
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: istio-ca-app
    spec:
      serviceAccountName: istio-ca-service-account
      containers:
      - name: istio-ca-container
        image: {{.CaImage}}
        imagePullPolicy: IfNotPresent
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              apiVersion: v1
              fieldPath: metadata.namespace
