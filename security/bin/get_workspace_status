ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

function get_branch() {
    local branch="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)"
    if [[ "${branch}" == 'HEAD' ]]; then
      branch="$(git show-ref | grep ${BUILD_GIT_REVISION}  \
        | grep -oP "refs/remotes/.*/\K.*" | grep -v -i head)" \
        || branch=''
    fi
    if [[ -n "${branch}" ]]; then
      echo "${branch}"
    else
      echo 'unknown'
    fi
}

BUILD_GIT_REVISION=$(git rev-parse --short HEAD 2> /dev/null)
if [[  $? == 0 ]]; then
    BRANCH="$(get_branch)"
    git diff-index --quiet HEAD
    if [[  $? != 0 ]]; then
        BUILD_GIT_REVISION=${BUILD_GIT_REVISION}"-dirty"
    fi
else
    BUILD_GIT_REVISION=unknown
    BRANCH=unknown
fi

RELEASE_TAG=$(git describe --match '[0-9]*\.[0-9]*\.[0-9]*' --exact-match 2> /dev/null || echo "")

VERSION='unknown'
if [[ -n "${RELEASE_TAG}" ]]; then
  VERSION="${RELEASE_TAG}"
elif [[ -n ${ISTIO_VERSION} ]]; then
  VERSION="${ISTIO_VERSION}-${BUILD_GIT_REVISION}"
fi

echo host "$(hostname -f)"
echo gitBranch "${BRANCH}"
echo gitRevision "${BUILD_GIT_REVISION}"
echo user "$(whoami)"
echo version "${VERSION}"
